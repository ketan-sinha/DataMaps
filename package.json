{
  "name": "dash_data_maps",
  "version": "0.9.0",
  "description": "DASH DataMaps - a real time analysis & visualization frame work",
  "main": "main.html",
  "dependencies": {
    "bcrypt": "^0.8.7",
    "chokidar": "^1.7.0",
    "eslint-plugin-import": "^2.0.1",
    "fibers": "^1.0.15",
    "fs-extra": "^0.30.0",
    "ftps": "https://registry.npmjs.org/ftps/-/ftps-0.4.6.tgz",
    "highcharts": "^4.2.7",
    "junk": "^1.0.3"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "pretest": "npm run lint --silent"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "meteor": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/guide"
    ],
    "globals": {
      "chokidar": true,
      "Nodemailer": true,
      "moment": true,
      "logger": true,
      "Papa": true,
      "sAlert": true,
      "Winston": true,
      "LiveData": true,
      "AggrData": true,
      "Sites": true,
      "LiveSites": true,
      "DataSeries": true,
      "Exports": true,
      "AggrEdits": true,
      "DataExporter": true,
      "SimpleSchema": true,
      "channelHash": true,
      "flagsHash": true,
      "unitsHash": true
    },
    "rules": {
      "max-len": [
        2,
        160,
        2,
        {
          "ignoreUrls": true,
          "ignoreComments": false
        }
      ],
      "arrow-body-style": [
        "error",
        "always"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "foo_",
            "_id"
          ]
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DataAnalyticsinStudentHands/DataMaps.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DataAnalyticsinStudentHands/DataMaps/issues"
  },
  "homepage": "https://github.com/DataAnalyticsinStudentHands/DataMaps",
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.4.1"
  }
}
